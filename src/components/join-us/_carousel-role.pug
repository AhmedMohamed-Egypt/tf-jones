- var HelpList = [{title:'Tradespeople',text:'Our trades range from joinery, plumbing, plastering, electrical, fire stopping, groundworks, labouring, floor laying, decorating and multi-trades.',theme:'grey'},{title:'Support',text:'Roles include Project Coordinators, Finance, HR, Payroll, Business Systems and Health and Safety.',theme:'navy'},{title:'Management',text:'Across the business our management roles are crucial in delivering company goals and objectives, driving change and leading our people.',theme:'yellow'},{title:'Fleet & Stores',text:'Roles include administration, stores (processing stock and deliveries) and management.',theme:'light-grey'}]

mixin carouselItem(className)
 div(id="myCarousel" class=`${className} container` data-bs-ride="carousel")
  .col-lg-10.mx-auto.col-12
   div(class="coloredCards d-flex mt-5 flex-column")
    div(class="carousel-inner w-100")  
     each val,index in HelpList
      div(class=`carousel-item ${index===0?'active':''}`)
       div(class="col-lg-3  col-12 col-sm-6")
        div(class=`${val.theme} pt-3 coloredCards__div pt-5`)
         span(class="line")
         h3(class="text-semi-bold-28 pt-3 mb-3")=val.title
         p(class="text-16-reg lh-s3 ")=val.text 
    div(class="roles-carousel__nav")
     button.carousel-control-prev(type='button' data-bs-target='#myCarousel' data-bs-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.visually-hidden Previous
     button.carousel-control-next(type='button' data-bs-target='#myCarousel' data-bs-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.visually-hidden Next
section(class="join-us-sliding  pb-5")
 +carouselItem('carousel slide safetySolutions__carousel roles-carousel')